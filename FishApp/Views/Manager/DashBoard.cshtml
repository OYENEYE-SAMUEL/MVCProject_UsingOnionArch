@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - FishApp</title>
  
    @* <link rel="stylesheet" href="@Url.Content("~/css/manager.css")"> *@
    <style>
        /* General styling for the body */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f4f8; /* Softer background */
}

/* Dashboard container styling */
.dashboard-container {
    display: flex;
    height: 100vh;
}

/* Sidebar styling */
.sidebar {
    width: 250px;
    background-color: #34495e;
    padding-top: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #fff;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.15);
}

.sidebar-header {
    text-align: center;
    font-size: 1.8em;
    padding: 15px;
    background-color: #1abc9c; /* Bright header */
    color: #fff;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: bold;
    border-radius: 10px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar ul li {
    margin: 15px 0;
    padding: 12px 20px;
    text-align: left;
    transition: background-color 0.3s ease;
}

.sidebar ul li a {
    text-decoration: none;
    color: #ecf0f1;
    font-size: 1.1em;
    transition: color 0.3s ease;
}

.sidebar ul li:hover {
    background-color: #1abc9c; /* Highlight the sidebar option on hover */
    border-radius: 5px;
}

.sidebar ul li a:hover {
    color: #2c3e50; /* Text color change on hover */
}

/* Dashboard Cards */
.dashboard-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-gap: 20px;
    padding: 20px;
    background-color: #ecf0f1;
}

.card {
    background-color: #3498db; /* Primary card color */
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    transition: transform 0.3s ease, background-color 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.card a {
    color: white;
    font-size: 1.2em;
    text-decoration: none;
    font-weight: bold;
    letter-spacing: 1px;
}

.card:hover {
    transform: translateY(-10px); /* Lift effect on hover */
    background-color: #2980b9; /* Slightly darker color on hover */
}

/* Main content styling */
.main-content {
    flex-grow: 1;
    background-color: #fff;
    padding: 20px;
    overflow-y: auto;
}

main header h1 {
    font-size: 2.2em;
    color: #34495e;
    margin: 0;
    font-weight: bold;
}

section p {
    font-size: 1.2em;
    color: #7f8c8d;
}

/* Responsive design */
media screen and (max-width: 768px) {
    .dashboard-container {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        height: auto;
    }

    .main-content {
        padding: 10px;
    }
}

    </style>
</head>

<body>

      <!-- Dashboard Cards -->
    <div class="dashboard-cards">
        <div class="card">
            <a asp-controller="Manager" asp-action="CreatePond">Create Pond</a>
        </div>
        <div class="card">
            <a asp-controller="Manager" asp-action="CreateFish">Create Fish</a>
        </div>
        <div class="card">
            <a asp-controller="Manager" asp-action="AllFish">All Fish</a>
        </div>
        <div class="card">
            <a asp-controller="Manager" asp-action="AllCustomers">All Customers</a>
        </div>
        <div class="card">
            <a asp-controller="Manager" asp-action="GetPendingOrders">All Orders</a>
        </div>
        <div class="card">
            <a asp-controller="Manager" asp-action="AllPonds">All Ponds</a>
        </div>
    </div>
</div>

</body>

</html>














