@using Application.DTO
@using Domain.Entities
@model ICollection<FishReponseModel>


<style>
    .header-title {
        color: #4a90e2;
        font-family: 'Arial', sans-serif;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .btn {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .text-muted {
        color: #6c757d !important;
        font-size: 1.1em;
    }
</style>


@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "All Fish";
    int count = 0;

    @if (TempData["note"] != null)
    {
        <div class="alert alert-success">
            @TempData["note"]
        </div>
    }
}

<p>
    <a asp-action="CreateFish" class="btn btn-primary">Create</a>
</p>

<h1 class="header-title">All Fish</h1>
@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>S/N</th>
                <th>Name</th>
                <th>Period</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Pond's Name</th>
                <th>Created By</th>
                <th>Dated Created</th>
                <th>Category Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@category.Name</td>
                    <td>@category.Period</td>
                    <td>@category.Price</td>
                    <td>@category.Quantity</td>
                    <td>
                        @foreach(var pond in category.FishPonds)
                        {
                            <div>
                                @pond.Pond.Name
                            </div>
                            
                        }
                    </td>
                    <td>@category.CreatedBy</td>
                    <td>@category.DateCreated</td>
                    <td>@category.CategoryType</td>

                    <td><a asp-action="GetFish" asp-controller="Manager" asp-route-id="@category.Id" class="btn btn-info btn-sm">Details</a></td>
                    <td><a asp-action="UpdateFish" asp-controller="Manager" asp-route-id="@category.Name" class="btn btn-warning btn-sm">Edit</a></td>
                    <td><a asp-action="DeleteCategory" asp-controller="Manager" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Delete</a></td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="text-muted">No category data to view.......</p>
}






