@using Application.DTO
@using Domain.Entities
@model ICollection<PondResponseModel>


<style>
    .header-title {
        color: #28a745;
        font-family: 'Georgia', serif;
        margin-bottom: 20px;

    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    .btn {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .text-muted {
        color: #6c757d !important;
        font-size: 1.1em;
    }

    .pond-image {
        max-width: 100px;
        max-height: 60px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
</style>

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "All Ponds";
    int count = 0;
}

@if (TempData["inform"] != null)
{
    <div class="alert alert-success">
        @TempData["inform"]
    </div>
}

<p>
    <a asp-action="CreatePond" class="btn btn-primary">Create Pond</a>
</p>

<h1 class="header-title">All Ponds</h1>
@if (Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>S/N</th>
                <th>Name</th>
                <th>Description</th>
                <th>PondSize</th>
                <th>Dimension</th>
                <th>Space Remain</th>
                <th>Fish Contain</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pond in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@pond.Name</td>
                    <td>@pond.Description</td>
                    <td>@pond.PondSize</td>
                    <td>@pond.Dimension</td>
                    <td>@pond.SpaceRemain</td>
                    <td>
                        @foreach(var pon in pond.FishPonds)
                        {
                            <div>
                                @pon.Fish.Name
                            </div>
                            
                        }
                    </td>
                    <td><a asp-action="GetPond" asp-controller="Manager" asp-route-id="@pond.Id" class="btn btn-info btn-sm">Details</a></td>
                    <td><a asp-action="UpdatePond" asp-controller="Manager" asp-route-id="@pond.Id" class="btn btn-warning btn-sm">Edit</a></td>
                    <td><a asp-action="DeletePond" asp-controller="Manager" asp-route-name="@pond.Name" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p class="text-muted">No pond data to view........</p>
}




