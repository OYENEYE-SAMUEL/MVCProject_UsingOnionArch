@model Application.DTO.CustomerResponseModel



<style>
    .profile-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        max-width: 600px;
        margin: auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .profile-container h2 {
            color: #343a40;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

    .profile-detail {
        margin-bottom: 15px;
    }

        .profile-detail strong {
            color: #007bff;
            font-weight: 600;
        }

        .profile-detail span {
            color: #495057;
            font-size: 16px;
            margin-left: 10px;
        }

    .no-details {
        text-align: center;
        padding: 20px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        max-width: 600px;
        margin: auto;
    }
</style>


@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "ViewProfile";
}

<h1>View Profile</h1>

@if (Model != null)
{
    <div class="profile-container">
        <h2>My Details</h2>
        <div class="profile-detail">
            <strong>First Name:</strong> <span>@Model.FirstName</span>
        </div>
        <div class="profile-detail">
            <strong>Last Name:</strong> <span>@Model.LastName</span>
        </div>
        <div class="profile-detail">
            <strong>Address:</strong> <span>@Model.Address</span>
        </div>
        <div class="profile-detail">
            <strong>Phone Number:</strong> <span>@Model.PhoneNumber</span>
        </div>
        <div class="profile-detail">
            <strong>Email:</strong> <span>@Model.Email</span>
        </div>
    </div>
}
else
{
    <div class="no-details">
        <strong>No customer details found.</strong>
    </div>
}



















