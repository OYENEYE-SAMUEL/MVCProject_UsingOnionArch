@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Customer Dashboard - FishApp";
}

<div class="main-content">
    <!-- Navbar -->
    <div class="navbar">
        <h2>Customer Dashboard</h2>
    </div>

    <!-- TempData Messages -->
    @if (TempData["alert"] != null)
    {
        <div class="alert alert-success">
            @TempData["alert"]
        </div>
    }
    @if (TempData["fundMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["fundMessage"]
        </div>
    }
    @if (TempData["updateMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["updateMessage"]
        </div>
    }

    <!-- Dashboard Cards -->
    <div class="dashboard-cards">
        <div class="card">  
            <a asp-controller="Customer" asp-action="AllFish">All Fish</a>
        </div>
        <div class="card">
            <a asp-controller="Customer" asp-action="OrderByCustomer">All Orders</a>
        </div>
        <div class="card">
            <a asp-controller="Customer" asp-action="ViewProfile">View Profile</a>
        </div>
        <div class="card">
            <a asp-controller="Customer" asp-action="WalletBalance">View Wallet</a>
        </div>
        <div class="card">
            <a asp-controller="Customer" asp-action="FundWallet">Fund Wallet</a>
        </div>
        <div class="card">
            <a asp-controller="Customer" asp-action="UpdateCustomer">Update Profile</a>
        </div>
        <div class="card">
            <a asp-controller="Customer" asp-action="MakeOrder">Make Order</a>
        </div>
    </div>
</div>













