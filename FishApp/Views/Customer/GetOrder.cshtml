@model Application.DTO.OrderResponseModel


<style>
    .header-title {
        color: #28a745;
        font-family: 'Arial', sans-serif;
        margin-bottom: 20px;
        font-size: 26px;
        font-weight: bold;
        text-align: center;
    }

    .detail-section {
        background-color: #f1f1f1;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 25px;
        max-width: 700px;
        margin: 0 auto;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .fish-image-container {
        margin-bottom: 30px;
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    .fish-image-container img {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        border: 4px solid #28a745;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .detail-item {
        margin-bottom: 15px;
        font-family: 'Verdana', sans-serif;
        font-size: 17px;
        text-align: left;
    }

    .detail-item strong {
        color: #007bff;
        font-weight: 700;
    }

    .pond-list {
        list-style-type: square;
        padding-left: 25px;
        color: #495057;
        text-align: left;
    }

    .pond-list li {
        margin-bottom: 8px;
        font-family: 'Verdana', sans-serif;
        font-size: 16px;
    }

    .alert-warning {
        background-color: #ffc107;
        color: #856404;
        padding: 15px;
        border-radius: 8px;
        text-align: center;
        max-width: 600px;
        margin: 20px auto;
        font-family: 'Verdana', sans-serif;
    }

    .approve-button, .back-button {
        background-color: #007bff;
        color: #fff;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        display: inline-block;
        text-decoration: none;
    }

    .approve-button:hover, .back-button:hover {
        background-color: #0056b3;
    }

    .button-container {
        margin-top: 30px;
        text-align: center;
    }
</style>

@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Order Details";
}

@if (Model != null)
{
    <h2 class="header-title">Order Details</h2>
    <div class="detail-section">
        <div class="fish-image-container">
            @foreach (var order in Model.OrderFishes)
            {
                <img src="~/Uploads/@order.Fish.FishImage" alt="Fish Image" />
            }
        </div>

        <div class="fish-details">
            <div class="detail-item">
                <strong>Order Date:</strong> @Model.DateOrder
            </div>
            <div class="detail-item">
                <strong>Total Price:</strong> $@Model.TotalPrice
            </div>
            <div class="detail-item">
                <strong>Customer's Email:</strong> @Model.CreatedBy
            </div>

            <div class="detail-item">
                <strong>Items Ordered:</strong>
                <ul class="pond-list">
                    @foreach (var item in Model.OrderItems)
                    {
                        <li><strong>@item.Key:</strong> @item.Value</li>
                    }
                </ul>
            </div>
        </div>

        <div class="button-container">
            <a asp-controller="Customer" asp-action="OrderByCustomer" class="back-button">Back to List</a>
        </div>
    </div>
}
else
{
    <div class="alert-warning">
        <strong>No order is initiated.</strong>
    </div>
}











