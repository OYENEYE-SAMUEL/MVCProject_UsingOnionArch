


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FishApp</title>
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
            height: 100vh;
        }

        /* Sidebar Styling */
        .sidebar {
            width: 220px;
            background-color: #2c3e50;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
            margin-top: 30px;
        }

        .sidebar ul li {
            margin-bottom: 15px;
        }

        .sidebar ul li a {
            color: #ecf0f1;
            text-decoration: none;
            font-size: 16px;
            display: block;
            padding: 10px 15px;
            border-radius: 4px;
            transition: background-color 0.3s, color 0.3s;
        }

        .sidebar ul li a:hover {
            background-color: #34495e;
            color: #ffffff;
        }

        .dashboard-container {
            display: flex;
            flex: 1;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
            background-color: #ecf0f1;
        }

        .navbar {
            background-color: #2980b9;
            color: white;
            padding: 15px;
            text-align: center;
            border-bottom: 2px solid #2980b9;
        }

        .navbar h2 {
            margin: 0;
            font-size: 20px;
            font-weight: normal;
        }

        .user-info {
            margin-top: 15px;
            color: #ece7e7;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <ul>
                <li><a asp-controller="Manager" asp-action="CreatePond">Create Pond</a></li>
                <li><a asp-controller="Manager" asp-action="CreateFish">Create Fish</a></li>
                <li><a asp-controller="Manager" asp-action="AllFish">All Fish</a></li>
                <li><a asp-controller="Manager" asp-action="AllCustomers">All Customers</a></li>
                <li><a asp-controller="Manager" asp-action="GetPendingOrders">All Orders</a></li>
                <li><a asp-controller="Manager" asp-action="AllPonds">All Ponds</a></li>
            </ul>

            <!-- Show login/logout -->
            <div class="user-info">
                @if (User.Identity.IsAuthenticated)
                {
                    <span>Welcome, @User.Identity.Name</span>
                    <br />
                    <a asp-area="" asp-controller="User" asp-action="Logout" class="text-light">Logout</a>
                }
                else
                {
                    <a asp-area="" asp-controller="User" asp-action="Login" class="text-light">Login</a>
                }
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>






